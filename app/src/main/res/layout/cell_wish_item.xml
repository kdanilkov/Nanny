<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">


    <ImageView
        app:srcCompat="@drawable/circle_view_blue"
        android:layout_marginStart="15dp"
        android:id="@+id/imgvCircle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <com.ninja.nanny.Custom.RegularTextView
        android:text="Emirates NBD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgvCircle"
        android:layout_toEndOf="@+id/imgvCircle"
        android:layout_marginStart="20dp"
        android:id="@+id/tvName"
        android:textSize="16sp"/>

    <com.ninja.nanny.Custom.RegularTextView
        android:text="******123, Current, by SMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_alignStart="@+id/tvName"
        android:id="@+id/tvDetail"
        android:layout_marginTop="3dp"
        android:textSize="14sp"
        android:textColor="@color/gray_dark" />

    <ToggleButton
        android:layout_width="44dp"
        android:layout_height="23dp"
        android:background="@drawable/tbtn_selector_blue"
        android:textOff=""
        android:textOn=""
        android:id="@+id/tbtnSwitch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:checked="false" />
</RelativeLayout>
