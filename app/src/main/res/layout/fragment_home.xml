<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_small">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/rlyTop"
        android:background="@color/colorPrimary">

        <Button
            android:layout_marginStart="15dp"
            android:id="@+id/btnMenu"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/ic_menu"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <com.moneynanny.nanny.Custom.MediumTextView
            android:text="Money Nanny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_marginStart="10dp"
            android:id="@+id/textView3"
            android:layout_alignBaseline="@+id/btnMenu"
            android:layout_toRightOf="@+id/btnMenu"
            android:textColor="@color/white"
            android:textSize="@dimen/title_font_size" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlyTop">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#7634809d">

                    <com.moneynanny.nanny.Custom.RegularTextView
                        android:text="230"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvLeftThisWeek"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/big_font_size"
                        android:textColor="@color/white" />

                    <com.moneynanny.nanny.Custom.RegularTextView
                        android:text="AED"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tvLeftThisWeek"
                        android:textSize="@dimen/editor_font_size"
                        android:textColor="@color/white"
                        android:layout_marginLeft="5dp"
                        android:layout_alignBaseline="@+id/tvLeftThisWeek" />

                    <com.moneynanny.nanny.Custom.RegularTextView
                        android:text="Available amount for current week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        android:layout_alignStart="@+id/tvLeftThisWeek"
                        android:layout_below="@+id/tvLeftThisWeek"
                        android:textSize="@dimen/label_font_size"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp" />

                    <com.moneynanny.nanny.Custom.RegularTextView
                        android:text="1,400"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvLeftThisMonth"
                        android:layout_alignStart="@+id/tvLeftThisWeek"
                        android:layout_above="@+id/textView4"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/big_font_size" />

                    <com.moneynanny.nanny.Custom.RegularTextView
                        android:text="AED"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tvLeftThisMonth"
                        android:textSize="@dimen/editor_font_size"
                        android:textColor="@color/white"
                        android:layout_marginLeft="5dp"
                        android:layout_alignBaseline="@+id/tvLeftThisMonth" />

                    <com.moneynanny.nanny.Custom.RegularTextView
                        android:text="Available amount for current month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:layout_alignLeft="@+id/tvLeftThisMonth"


                        android:textSize="@dimen/label_font_size"
                        android:textColor="@color/white"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp" />
                </RelativeLayout>

                <RelativeLayout android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:background="#c6c17204">

                    <com.moneynanny.nanny.Custom.RegularTextView
                        android:text="370"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvUpcomingPayment"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/big_font_size"
                        android:textColor="@color/white" />

                    <com.moneynanny.nanny.Custom.RegularTextView
                        android:text="AED"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tvUpcomingPayment"
                        android:textSize="@dimen/editor_font_size"
                        android:textColor="@color/white"
                        android:layout_marginLeft="5dp"
                        android:layout_alignBaseline="@+id/tvUpcomingPayment" />

                    <com.moneynanny.nanny.Custom.RegularTextView
                        android:text="Upcoming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:textColor="@color/white"
                        android:layout_below="@+id/tvUpcomingPayment"
                        android:layout_alignStart="@+id/tvUpcomingPayment"
                        android:textSize="@dimen/label_font_size"
                        android:layout_marginTop="8dp" />

                    <com.moneynanny.nanny.Custom.RegularTextView
                        android:text="payments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:layout_alignStart="@+id/textView6"
                        android:layout_below="@+id/textView6"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/label_font_size"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#9643bc08">

                <com.moneynanny.nanny.Custom.RegularTextView
                    android:text="500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSpentForWish"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/big_font_size" />
                <com.moneynanny.nanny.Custom.RegularTextView
                    android:text="AED"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvSpentForWish"
                    android:textSize="@dimen/editor_font_size"
                    android:textColor="@color/white"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/textView11"
                    android:layout_alignBaseline="@+id/tvSpentForWish" />

                <com.moneynanny.nanny.Custom.RegularTextView
                    android:text="Reserved for wishlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:layout_alignBottom="@+id/tvSpentForWish"
                    android:layout_toRightOf="@+id/textView11"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/label_font_size"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlytDebitCard"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="#96572cbc">

                <com.moneynanny.nanny.Custom.RegularTextView
                    android:text="1,400"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/tvMoneyDebit"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="@dimen/big_font_size"
                    android:textColor="@color/white" />

                <com.moneynanny.nanny.Custom.RegularTextView
                    android:text="AED"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvMoneyDebit"
                    android:textSize="@dimen/editor_font_size"
                    android:textColor="@color/white"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tvCurrencyDebit"
                    android:layout_alignBaseline="@+id/tvMoneyDebit" />

                <com.moneynanny.nanny.Custom.RegularTextView
                    android:text="My Debit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tvMoneyDebit"
                    android:layout_toEndOf="@+id/tvCurrencyDebit"
                    android:layout_marginStart="10dp"
                    android:id="@+id/tvLabelDebitCard"
                    android:textSize="@dimen/label_font_size"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:layout_width="150dp"
        android:id="@+id/btnAdvice"
        android:layout_centerInParent="true"
        android:layout_height="150dp"
        android:background="@drawable/ic_btn_advice" />

</RelativeLayout>

