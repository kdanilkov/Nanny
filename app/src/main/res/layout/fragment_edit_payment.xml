<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:rsv="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/rlyTop"
        android:background="@color/colorPrimary">

        <Button
            android:layout_marginStart="15dp"
            android:id="@+id/btnBack"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/ic_back_other"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:id="@+id/btnDelete"
            android:background="@drawable/ic_trash" />

        <Button
            android:layout_width="30dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/btnSave"
            android:background="@drawable/ic_save"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/btnDelete" />

        <com.moneynanny.nanny.Custom.MediumTextView
            android:text="Edit Payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_marginStart="10dp"
            android:id="@+id/textView3"
            android:layout_alignBaseline="@+id/btnBack"
            android:layout_toRightOf="@+id/btnBack"
            android:textColor="@color/white"
            android:textSize="@dimen/title_font_size" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlyTop"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/lyContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp">

                <com.moneynanny.nanny.Custom.MediumTextView
                    android:text="TITLE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/label_font_size"
                    android:textColor="@color/label_text_color" />

                <com.moneynanny.nanny.Custom.RegularEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text=""
                    android:ems="10"
                    android:textSize="@dimen/editor_font_size"
                    android:id="@+id/etTitle"
                    android:background="@drawable/border_add_bank_editor"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:selectAllOnFocus="true"
                    android:paddingBottom="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.moneynanny.nanny.Custom.MediumTextView
                        android:text="AMOUNT (BHD)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/label_text_color"
                        android:textSize="@dimen/label_font_size"
                        android:id="@+id/tvAmount" />

                    <com.moneynanny.nanny.Custom.RegularEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/editor_font_size"
                        android:ems="10"
                        android:id="@+id/etAmount"
                        android:background="@drawable/border_add_bank_editor"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:paddingBottom="5dp"
                        android:inputType="number"
                        android:nextFocusDown="@+id/etDateOfMonth"
                        android:selectAllOnFocus="true"
                        android:hint="BHD 0.00" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="60dp">

                    <com.moneynanny.nanny.Custom.MediumTextView
                        android:text="DATE OF MONTH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/label_font_size"
                        android:textColor="@color/label_text_color" />

                    <com.moneynanny.nanny.Custom.RegularEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/etDateOfMonth"
                        android:background="@drawable/border_add_bank_editor"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:paddingBottom="5dp"
                        android:textSize="@dimen/editor_font_size"
                        android:inputType="number"
                        android:selectAllOnFocus="true"
                        android:hint="10" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_height="30dp"
                        android:id="@+id/btnChkBoxRecurrent"
                        android:layout_weight="1"
                        android:layout_width="30dp"
                        android:background="@drawable/ic_unchecked" />

                    <com.moneynanny.nanny.Custom.MediumTextView
                        android:text="RECURRENT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/label_font_size"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/label_text_color" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <Button
                        android:layout_height="30dp"
                        android:id="@+id/btnChkBoxSaving"
                        android:layout_weight="1"
                        android:layout_width="30dp"
                        android:background="@drawable/ic_unchecked" />

                    <com.moneynanny.nanny.Custom.MediumTextView
                        android:text="SAVINGS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/label_font_size"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/label_text_color" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp">

                <com.moneynanny.nanny.Custom.MediumTextView
                    android:text="Key words"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/label_font_size"
                    android:textColor="@color/label_text_color" />

                <com.moneynanny.nanny.Custom.RegularEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text=""
                    android:ems="10"
                    android:textSize="@dimen/editor_font_size"
                    android:id="@+id/etDetail"
                    android:background="@drawable/border_add_bank_editor"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:selectAllOnFocus="true"
                    android:paddingBottom="5dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

